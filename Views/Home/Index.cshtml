@{
    ViewData["Title"] = "Home Page";
}
<style>

    .row{
        margin:auto

    }
    /*rowheader and description*/
    .rowheader {
        color: #f5822b;
        margin-bottom: 30px
    }

    .rowdescription {
        width: 80%;
        margin-bottom: 40px
    }
    /*Button*/
    .button {
        border: none;
        background: #404040;
        color: #ffffff !important;
        font-weight: 100;
        padding: 20px;
        text-transform: uppercase;
        border-radius: 6px;
        display: inline-block;
        transition: all 0.3s ease 0s;
    }

        .button:hover {
            color: #404040 !important;
            font-weight: 700 !important;
            letter-spacing: 3px;
            background: none;
            -webkit-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
            -moz-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
            transition: all 0.3s ease 0s;
        }
    .parallax {
        background-image: linear-gradient(rgba(255,255,255,.6), rgba(255,255,255,.5)), url('../images/h1.jpg'); /* Full height */
        height: 100%; /* Create the parallax scrolling effect */
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        padding: 200px 0px 50px 0px
    }
    .header1 {
        padding-left: 50px;
        font-size: 5rem;
        font-weight: 700;
        color: darkorange
    }
    .header2 {
        padding-left: 50px;
        font-size: 5rem;
        font-weight: 700;
    }
    .slogan {
        padding: 0px 0px 0px 50px;
        font-size: 1.666rem;
        font-weight: 300
    }
    #row1 {
        background-color: lightpink;
        text-align: center;
    }
        #row1 h3 {
            padding-top: 40px
        }
        #row1 h4 {
            padding: 40px 0px 40px;
            width: 75%;
            margin: 0 auto; /* center element horizontally */
        }
    /*Row 2*/
    #row2 {
        background-color: mediumpurple;
    }
    .row2image {
        padding: 80px 50px 40px 0px
    }
    .row2text {
        padding: 80px 0 40px 50px;
    }
    /*Row 3*/
    #row3 {
        background-color:turquoise;
    }
    .row3image {
        padding: 80px 0px 40px 50px
    }
    .row3text {
        padding: 80px 50px 40px 0px;
    }
    /*Row 4*/
    #row4 {
        background-color: lightblue;
    }
    /*row5*/
    #row5 {
        background-color: lightgoldenrodyellow;
    }
    img {
        width: 65%;
        height: auto;
    }
    .row24 {
        display: flex;
        flex-direction: row-reverse;
    }
    .row35{
        display:flex;
        flex-direction:row
    }


    @@media
    screen and (max-width: 550px) {
        [class*="col-"] {
            width: 100%;
        }
        .header1 {
            font-size: 3rem;
        }

        .header2 {
            font-size: 3rem;
        }

        .slogan {
            font-size: 1.5rem;
        }
        #row1{
            padding: 0 15px
        }
        #row1 h3 {
            font-size: 2rem
        }
        #row1 h4 {
            width: 100%;
            font-size: 1.33rem;
            padding: 20px 0px 40px;
            text-align:justify
        }

        .row24 {
            display: block;
            padding: 20px;
            margin: 0 auto
        }
        .row35{
            display:block;
            padding:20px;
        }

        .col-sm-7 {
            padding: 0px
        }
        .col-sm-5{
            padding:0px
        }
        img {
            display: block;
            margin: 0 auto;
            width:60%
        
        }
        /*rowheader and description*/
        .rowheader {
            font-size: 2rem;
        }

        .rowdescription {
            font-size: 1.33rem;
            width:100%;
            text-align:justify
        }
    }

</style>

