@{
    ViewData["Title"] = "Home Page";
}
<style>
    .row {
        margin: auto
    }
    /*rowheader and description*/
    .rowheader {
        color: #f5822b;
        margin-bottom: 30px
    }

    .rowdescription {
        width: 80%;
        margin-bottom: 40px
    }
    /*Button*/
    .button {
        border: none;
        background: #404040;
        color: #ffffff !important;
        font-weight: 100;
        padding: 20px;
        text-transform: uppercase;
        border-radius: 6px;
        display: inline-block;
        transition: all 0.3s ease 0s;
    }

        .button:hover {
            color: #404040 !important;
            font-weight: 700 !important;
            letter-spacing: 3px;
            background: none;
            -webkit-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
            -moz-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
            transition: all 0.3s ease 0s;
        }
    a {
        color: white;
    }
    /* CSS link color */

    .parallax {
        background-image: url('../images/space&goBackground.jpg'); /* Full height */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        padding: 200px 0px 50px 0px
    }

    .slogan {
        font-size: 1.666rem;
        font-weight: 300;
        text-align:center
    }

    #row1 {
        background-color: lightpink;
        text-align: center;
    }

        #row1 h3 {
            padding-top: 40px
        }

        #row1 h4 {
            padding: 40px 0px 40px;
            width: 75%;
            margin: 0 auto; /* center element horizontally */
        }
    /*Row 2*/
    #row2 {
        background-color: mediumpurple;
    }

    .row2image {
        padding: 80px 50px 40px 0px
    }

    .row2text {
        padding: 80px 0 40px 50px;
    }
    /*Row 3*/
    #row3 {
        background-color: turquoise;
    }

    .row3image {
        padding: 80px 0px 40px 50px
    }

    .row3text {
        padding: 80px 50px 40px 0px;
    }
    /*Row 4*/
    #row4 {
        background-color: lightblue;
    }

    img {
        width: 65%;
        height: auto;
    }

    .row24 {
        display: flex;
        flex-direction: row-reverse;
    }

    .row35 {
        display: flex;
        flex-direction: row
    }

    @@media screen and (max-width: 550px) {
        [class*="col-"] {
            width: 100%;
        }
        .slogan {
            font-size: 1.5rem;
        }

        #row1 {
            padding: 0 15px
        }

            #row1 h3 {
                font-size: 2rem
            }

            #row1 h4 {
                width: 100%;
                font-size: 1.33rem;
                padding: 20px 0px 40px;
                text-align: justify
            }

        .row24 {
            display: block;
            padding: 20px;
            margin: 0 auto
        }

        .row35 {
            display: block;
            padding: 20px;
        }

        .col-sm-7 {
            padding: 0px
        }

        .col-sm-5 {
            padding: 0px
        }

        img {
            display: block;
            margin: 0 auto;
            width: 60%
        }
        /*rowheader and description*/
        .rowheader {
            font-size: 2rem;
        }

        .rowdescription {
            font-size: 1.33rem;
            width: 100%;
            text-align: justify
        }
    }
</style>

<!--0 row-->
<div class="parallax">
    <img src="images/SpaceGoLogo.jpg"class="animate__animated animate__slideInDown wow" alt="Logo" style="height:25%;width:30%;margin:0 auto;display:block;border-top-left-radius:50px;border-top-right-radius:50px">
    <br />
    <h2 class="slogan animate__animated animate__slideInDown wow">Space efficienty, go the distance!</h2>
</div>

<!--1st row (Description)-->
<div class="row" id="row1">
    <div>
        <h3>Space & Go</h3>
        <h4>We are a team of Ngee Ann Polytechnic students that are attempting to solve the problem of being unable to count the number of people in the vicinity as well as helping users to identify what are the most highly populated areas.</h4>
    </div>
</div>

<!--2nd row-->
<div class="row" id="row2">
    <div class="row24">
        <div class="row2image col-sm-5">
            <img src="images/map.png" alt="heatmap">
        </div>

        <div class="row2text col-sm-7 animate__animated animate__fadeInLeft wow" data-wow-duration="2s">
            <h1 class="rowheader">Heatmap</h1>
            <h5 class="rowdescription">Trying to find out the least crowded places to chill or eat? Here you can find out the latest information of the number of people in a vicinity</h5>
            <div class="button"><a target="_blank" href="Home/ViewMap">Let's Trace!</a></div>
        </div>
    </div>
</div>

<!--3rd row-->
<div class="row" id="row3">
    <div class="row35">
        <div class="row3image col-sm-5">
            <img src="images/newspaper.svg" alt="news icon">
        </div>

        <div class="row3text col-sm-7 animate__animated animate__fadeInRight wow" data-wow-duration="2s">
            <h1 class="rowheader">News</h1>
            <h5 class="rowdescription">Interested to know about the latest news of COVID-19? Click here to find out the latest news on COVID in Singapore!</h5>
            <div class="button"><a target="_blank" href="Home/News">Stay Updated!</a></div>
        </div>
    </div>
</div>

<!--4th row-->
<div class="row" id="row4">
    <div class="row24">
        <div class="row2image col-sm-5">
            <img src="images/team.png" alt="team">
        </div>

        <div class="row2text col-sm-7 animate__animated animate__fadeInLeft wow" data-wow-duration="2s">
            <h1 class="rowheader">About Us</h1>
            <h5 class="rowdescription">Curious about who is our development team? Here you can find out more about our team members as well as our mission, goals and what we aim to accomplish in this project.</h5>
            <div class="button"><a target="_blank" href="Home/AboutUs">Find out about us!</a></div>
        </div>
    </div>
</div>

<script>
    wow = new WOW(
        {
            boxClass: 'wow',      // default
            animateClass: 'animated', // default
            offset: 0,          // default
            mobile: true,       // default
            live: true        // default
        }
    )
    wow.init();
</script>
