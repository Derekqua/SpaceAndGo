
@{
    ViewData["Title"] = "Counter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #counter{
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        height:400px;
        overflow:scroll
    }

        #counter td, #counter th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #counter tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #counter tr:hover {
            background-color: #ddd;
        }

        #counter th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
            position:sticky;
            top:0
        }


</style>
<div class="container" id="counter">
    <table class="table">
        <thead>
            <tr>
                <th>Location</th>
                <th>Crowd</th>
            </tr>
        </thead>
        @foreach (var data in ViewBag.Data)
        {
            <tbody>
                <tr>
                    <td>@data.Location</td>
                    <td>@data.CrowdNow</td>
                </tr>
            </tbody>
        }
    </table>
</div>

